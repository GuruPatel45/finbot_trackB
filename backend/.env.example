# ============================================================
# FinBot Track B - Backend Environment Variables
# Copy to .env and fill in your values
# ============================================================

# ── LLM (Primary: Groq — FREE at console.groq.com) ────────
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ── LLM Fallbacks (optional) ──────────────────────────────
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_claude_key_here

# ── Financial APIs ────────────────────────────────────────
# Alpha Vantage: https://www.alphavantage.co/ (Free: 25 req/day)
ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# NewsAPI: https://newsapi.org/ (Free: 100 req/day)
NEWS_API_KEY=your_news_api_key

# Financial Modeling Prep: https://financialmodelingprep.com/
FMP_API_KEY=your_fmp_key

# ── PostgreSQL Database ────────────────────────────────────
# Local:    postgresql://postgres:password@localhost:5432/finbot
# Railway:  (auto-provided by Railway)
# Render:   (auto-provided by Render)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/finbot
SYNC_DATABASE_URL=postgresql://postgres:password@localhost:5432/finbot

# ── Redis Cache ───────────────────────────────────────────
# Local:   redis://localhost:6379/0
# Railway: (auto-provided)
# Upstash: redis://default:password@host:port
REDIS_URL=redis://localhost:6379/0

# ── App ───────────────────────────────────────────────────
APP_ENV=development              # development | production
SECRET_KEY=super-secret-change-in-production-min-32-chars
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app

# ── LangSmith Monitoring ──────────────────────────────────
# Get free at: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=ls__your_langsmith_key
LANGCHAIN_PROJECT=finbot-financial-agent

# ── Rate Limits ───────────────────────────────────────────
ALPHA_VANTAGE_RPM=5             # requests per minute (free tier)
NEWS_API_RPD=100                # requests per day (free tier)
FMP_RPD=250                     # requests per day (free tier)

# ── Cache TTL (seconds) ───────────────────────────────────
STOCK_PRICE_TTL=60
NEWS_TTL=300
FUNDAMENTALS_TTL=3600
MARKET_DATA_TTL=300
